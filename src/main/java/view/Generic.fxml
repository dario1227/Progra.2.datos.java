<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.GenericController">
   <VBox prefHeight="200.0" prefWidth="600.0">
      <children>
         <HBox prefHeight="67.0" prefWidth="600.0">
            <children>
                <Label contentDisplay="RIGHT" text="Answer">
                  <padding>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
                  <graphic>
                     <FontAwesomeIconView glyphName="ARROW_RIGHT"/>
                  </graphic>
               </Label>
               <Label fx:id="answerLabel">
                  <padding>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
               </Label>
               <JFXButton fx:id="guessBtn" buttonType="RAISED" contentDisplay="RIGHT" onAction="#genericSearch"
                          text="Guess">
                  <graphic>
                     <FontAwesomeIconView glyphName="QUESTION" />
                  </graphic>
                  <ripplerFill>
                     <LinearGradient cycleMethod="REPEAT" endX="1.0" endY="1.0">
                        <stops>
                           <Stop color="#0505ff" />
                           <Stop color="#00fff0" offset="1.0" />
                        </stops>
                     </LinearGradient>
                  </ripplerFill>
                  <padding>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
               </JFXButton>
            </children>
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
               <JFXTextField fx:id="genericTextField" promptText="Numbers">
                  <focusColor>
                     <LinearGradient cycleMethod="REPEAT" endX="1.0" endY="1.0">
                        <stops>
                           <Stop color="#00ffea" />
                           <Stop color="#6a00ff" offset="1.0" />
                        </stops>
                     </LinearGradient>
                  </focusColor>
               </JFXTextField>
               <Region layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            </children>
         </HBox>
      </children>
   </VBox>

</AnchorPane>
