<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="300.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/8.0.141" fx:controller="view.SearchDialogController">
    <children>
        <Label layoutX="48.0" layoutY="63.0" text="Search"/>
        <JFXTextField fx:id="searchTextField" layoutX="158.0" layoutY="59.0" promptText="Something">
            <focusColor>
                <LinearGradient cycleMethod="REPEAT" endX="1.0" endY="1.0">
                    <stops>
                        <Stop color="#55ff00"/>
                        <Stop color="#0066ff" offset="1.0"/>
                    </stops>
                </LinearGradient>
            </focusColor>
        </JFXTextField>
        <JFXComboBox fx:id="typeCombo" layoutX="167.0" layoutY="127.0">
            <focusColor>
                <LinearGradient cycleMethod="REPEAT" endX="1.0" endY="1.0">
                    <stops>
                        <Stop color="#31ff05"/>
                        <Stop color="#0040ff" offset="1.0"/>
                    </stops>
                </LinearGradient>
            </focusColor>
        </JFXComboBox>
        <JFXRadioButton fx:id="yesRadioBtn" layoutX="163.0" layoutY="197.0" onAction="#disableNo" text="YES"/>
        <JFXRadioButton fx:id="noRadioBtn" layoutX="279.0" layoutY="197.0" onAction="#disableYes" selected="true"
                        text="NO"/>
        <JFXButton fx:id="searchButton" contentDisplay="RIGHT" layoutX="157.0" layoutY="249.0" onAction="#saveSettings"
                   style="-fx-background-radius: 50;" text="Search">
            <graphic>
                <FontAwesomeIconView glyphName="SEARCH"/>
            </graphic>
            <ripplerFill>
                <LinearGradient cycleMethod="REPEAT" endX="1.0" endY="1.0">
                    <stops>
                        <Stop color="#31ff05"/>
                        <Stop color="#0051ff" offset="1.0"/>
                    </stops>
                </LinearGradient>
            </ripplerFill>
        </JFXButton>
        <Label layoutX="49.0" layoutY="197.0" text="Sorted"/>
        <Label layoutX="48.0" layoutY="142.0" text="Search by"/>
    </children>
</AnchorPane>
